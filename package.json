{
    "name": "@purinton/ssh-client",
    "type": "module",
    "version": "1.0.2",
    "description": "A simple, ESM-first SSH client for Node.js with private key authentication and sequential command execution.",
    "module": "index.mjs",
    "types": "index.d.ts",
    "files": [
        "index.mjs",
        "index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/ssh-client.git"
    },
    "keywords": [
        "ssh",
        "ssh-client",
        "nodejs",
        "private-key",
        "esm",
        "typescript",
        "automation",
        "remote-exec",
        "sequential-commands"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/ssh-client/issues"
    },
    "homepage": "https://github.com/purinton/ssh-client#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "ssh2": "^1.16.0"
    }
}